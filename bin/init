#!/bin/bash

cd ~/SuperNET/iguana

if [ -z "$PASSPHRASE" ]; then
  echo "No PASSPHRASE environment variable"
  exit 1
fi

if [ -z "$COINS" ]; then
  source ~/SuperNET/iguana/exchanges/coins
  COINS=$coins
fi

command ./marketmaker "{\"gui\":\"nogui\", \"client\":1, \"docker\":1, \"userhome\":\"/${HOME#"/"}\", \"passphrase\":\"$PASSPHRASE\", \"coins\":$COINS}"
